---
const { position } = Astro.props;
---

<section class="quadrant">
  <slot />
</section>

<style>
  section {
    color: white;
    display: grid;
    place-items: center;
    font-size: 8rem;
  }

  section.active {
    color: black;
  }

  section h2 {
    color: transparent;
  }

  .attack {
    background: lime;
    opacity: 0.6;
  }

  .defend {
    background: red;
    opacity: 0.6;
  }

  .attack,
  .defend {
    color: black;
  }
</style>
